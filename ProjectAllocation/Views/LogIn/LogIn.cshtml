<div class="container">
    <div class="row">
        <div class="form_bg">
            <form action="@Url.Action("LogIn","LogIn")" method="post">
                <h2 class="text-center">Login</h2>
                <br />
                <div class="form-group">
                    <input  type="email" name="username" class="form-control" id="userid" placeholder="User id">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="pwd" placeholder="Password">
                </div>
                <br />
                <div class="form-group text-left">
                    <button type="submit" class="btn btn-primary" id="login">Login</button>
                    <div class="pull-right"> <label><input type="checkbox" /> Remember me</label></div>
                </div>
                <div class="form-group">
                    <a class="btn btn-link no-padding-left">Forgot Password ? </a>
                </div>
            </form>
        </div>
    </div>
</div>
